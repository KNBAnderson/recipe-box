<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Hannibal's Recipe Box</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
    <h1>Hannibal's Recipe Box</h1>
    </div>
    @if (@Model.Count == 0)
    {
        <p>No cuisines were found at this time. Click the button below to start adding cuisines.</p>
    }
    @if(Model.Count != 0)
    {
        @foreach (var cuisine in Model)
        {
          <div class="list">
            <div class="card col-md-12">
              <div class="card-body">
                <h5 class="card-title">@cuisine.Region</h5>
                <div class="card-text">
                  <p><em>@cuisine.Description</em></p>
                  <p><a href="/cuisines/@cuisine.Id" class="btn btn-dark">See recipes</a></p>
                </div>
              </div>
            </div>
          </div>
          <br>
        }
    }
    <div id="space">
    </div>
    <hr>
    <a href="/cuisines/new" class="btn btn-dark">Add a new cuisine</a>
    <a href="/" class="btn btn-dark">Home</a>
  </div>
</body>
</html>
