@using RecipeBox.Models;
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Hannibal's Recipe Box</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Hannibal's Recipe Box</h1>
    </div>
    <ul>
    @if (Model.Count == 0)
    {
      <p>No recipes have been added yet. Click the button below to add a recipe.</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (var recipe in Model)
      {
        <div class="list">
          <div class="card col-md-12">
            <div class="card-body">
              <h5 class="card-title">@recipe.Name</h5>
              <div class="card-text">
                <p>@recipe.Ingredients</p>
                <p>@recipe.Instructions</p>
              </div>
            </div>
          </div>
        </div>
        <br>
      }
    }
    </ul>
    <div id="space">
    </div>
    <hr>
    <p><a href="/recipes/new" class="btn btn-dark">Add a new recipe</a></p>
    <p><a href="/" class="btn btn-dark">Home</a></p>
  </div>
</body>
</html>
